.locale-button {
    padding: 0.5em !important;
    height: auto;
    border: none !important;
}

.locale-button:hover {
    background-color: transparent !important;
    border-radius: 2em !important;
}

.locale-selected:hover {
    background-color: #f9f9f9 !important;
    border-radius: 2em !important;
}


.locale-selected {
    background-color: #f9f9f9 !important;
    font-weight: 600 !important;
    border-radius: 2em !important;
}

.locale-label {
    text-transform: none;
}